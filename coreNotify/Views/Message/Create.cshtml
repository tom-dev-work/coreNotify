@model Message
@{
	ViewData["Title"] = "Create Message";
}

<form method="post">
	<div class="container">
		<div class="row">
			<div>
				<a asp-controller="Message" asp-action="Index" class="btn btn-primary">
					<span class="fas fa-arrow-left"></span>
				</a>
			</div>
			<h1 class="mb-4">Create Message</h1>
		</div>
		<div class="form-group focused">
			<label asp-for="Title"></label>
			<input type="text" class="form-control" asp-for="Title">
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Content">Message</label>
			<textarea class="form-control" placeholder="Enter your message..." asp-for="Content" rows="4"></textarea>
				<span asp-validation-for="Content" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="form-group col-10">
				@Html.DropDownListFor(m => m.AppId, (SelectList)ViewBag.appList, new
				{
				@class = "form-control"
				})
			</div>
			<div>
			<a asp-controller="Application" asp-action="Create" class="btn btn-primary">
				<span class="fas fa-plus"></span>
			</a>
			</div>
		</div>
		<button class="btn btn-pill btn-primary" type="submit"><span class="mr-1"><span class="fas fa-paper-plane"></span></span> Create</button>
	</div>
</form>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

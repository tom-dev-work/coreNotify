@model Message
@{
	ViewData["Title"] = "Delete Message";
}
<p>Are you sure you want to delete this Message?</p>
<div class="card bg-primary shadow-soft border-light mb-4">
    <div class="card-body px-4 py-4 text-center text-md-left">
            <div class="row align-items-center">
                <div class="col-md">
                    <h2><strong>@ViewBag.message.Title</strong></h2>
                    <p>@ViewBag.message.Content</p>
            </div>
        </div>
    </div>
</div>
<form method="post">
	<input asp-for="Id" hidden />
	<button class="btn btn-danger" type="submit"><span class="mr-1"><span class="fas fa-trash"></span></span> Delete</button>
	<a asp-controller="Message" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>

